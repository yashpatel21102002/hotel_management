generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define the model for the FoodItem
model FoodItem {
  id          Int      @id @default(autoincrement())
  title       String?
  category    String?
  image       String?
  alt         String?
  description String?
  rating      Int? // Assuming star rating can be fractional
  btn         String?
  price       String?
  isVeg       Boolean?
}
