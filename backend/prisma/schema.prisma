generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define the model for the FoodItem
model FoodItem {
  id          Int     @id @default(autoincrement())
  name        String
  category    String
  imageLink   String?
  description String?
  star        Int? // Assuming star rating can be fractional
  price       Float
  isVeg       Boolean
}
